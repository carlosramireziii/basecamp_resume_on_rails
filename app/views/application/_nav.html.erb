<nav class="navbar navbar-expand navbar-light">
  <%= link_to icon('mountain', text: 'Basecamp Resume on Rails'), [:root], class: 'navbar-brand font-weight-bold mr-auto' %>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <%= link_to image_or_text_avatar(Current.user, image_size: 32, text_size: 2), 'javascript:void(0)', id: 'userDropdown', class: 'nav-link dropdown-toggle', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
        <% if Current.user.guest? %>
          <%= link_to 'Register', [:new, :users], class: 'dropdown-item' %>
          <%= link_to 'Log in', [:new, :sessions], class: 'dropdown-item' %>
        <% else %>
          <%= link_to 'My profile', [:edit, :users], class: 'dropdown-item' %>
          <%= link_to 'Log out', :sessions, method: :delete, class: 'dropdown-item' %>
        <% end %>
      </div>
    </li>
  </ul>
</nav>
