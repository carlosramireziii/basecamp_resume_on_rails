<nav class="navbar navbar-expand navbar-light">
  <%= link_to 'Basecamp Resume on Rails', '#', class: 'navbar-brand mr-auto' %>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <%= link_to Current.user.first_name, '#', id: 'userDropdown', class: 'nav-link dropdown-toggle', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
        <% if Current.user.guest? %>
          <%= link_to 'Register', '#', class: 'dropdown-item' %>
        <% else %>
          <%= link_to 'My profile', '#', class: 'dropdown-item' %>
          <%= link_to 'Log out', :session, method: :delete, class: 'dropdown-item' %>
        <% end %>
      </div>
    </li>
  </ul>
</nav>
