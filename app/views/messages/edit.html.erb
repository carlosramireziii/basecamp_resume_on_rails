<div class="container-fluid">
  <div class="col-sm-12 col-lg-10 mx-auto">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-white rounded-bottom-0 justify-content-center border-top border-left border-right w-75 mx-auto mb-0">
        <li class="breadcrumb-item"><%= link_to icon('th', text: @project.title), [@project], class: 'text-reset' %></li>
        <li class="breadcrumb-item"><%= link_to 'Messages', [@project, :messages], class: 'text-reset' %></li>
      </ol>
    </nav>
    <div class="card shadow-lg">
      <div class="card-body">
        <h1 class="h3 text-center mb-0">Update your message</h1>
        <div class="col-lg-10 mx-auto mt-3">
          <%= render 'form', project: @project, message: @message %>
        </div>
      </div>
    </div>
  </div>
</div>
