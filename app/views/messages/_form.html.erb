<%= bootstrap_form_with model: [project, message] do |form| %>
  <%= form.text_field :title, hide_label: true, placeholder: true %>
  <%= form.rich_text_area :content, hide_label: true %>
  <div class="row no-gutters">
    <%= form.button class: "btn btn-success flex-grow-1", data: { disable_with: icon('spinner fa-spin', text: 'Posting') } %>
    <%= link_to 'Cancel', [project, :messages], class: 'btn ml-auto' %>
  </div>
<% end %>
